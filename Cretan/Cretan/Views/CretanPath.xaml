<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Cretan.Views.CretanPath">
    <ContentPage.Content>
        <ListView ItemsSource="{Binding SelectedPack.Programs}" x:Name="_packView">
            <!--<ListView.HeaderTemplate>
                <DataTemplate>
                    <StackLayout HeightRequest="50">
                        <Label Text="{Binding Path=SelectedItem.Name, Source={x:Reference _packView}}"/>
                    </StackLayout>
                </DataTemplate>
            </ListView.HeaderTemplate>-->
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Frame BorderColor="{DynamicResource mainColor}" CornerRadius="0">
                            <StackLayout>
                                <Label Text="{Binding Name}" Font="16"/>
                                <Label Text="{Binding Description}" Font="12"/>
